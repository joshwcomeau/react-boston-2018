class ComposeEmail extends Component {
  state = {
    status: 'composing',
  }

  sendLetter = () => {
    this.setState({ status: 'sending' });
  }

  render() {
    const { status } = this.state;

    return (
      <NodeConsumer>
        {({
          composeBtn,
          outboxHeading,
        }) => (
          <Transport
            fromNode={composeBtn}
            toNode={outboxHeading}
            status={
              status === 'composing'
                ? 'open'
                : 'closed'
            }
          >
            <Foldable
              isFolded={status === 'send'}
            >
              <Letter
                handleSend={this.sendLetter}
              />
            </Foldable>
          </Transport>
        )}
      </NodeConsumer>
    );
  }
}
